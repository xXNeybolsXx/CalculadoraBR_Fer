<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52C8F6"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#22C2D6"
        android:gravity="center"
        android:text=" Simulador De Credito "
        android:textAlignment="center"
        android:textColor="#EA1010"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="valor 1"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etvalor1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese El Valor 1"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="valor 2"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etvalor2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese El Valor 2"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Resultado"
        android:textAlignment="center"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >


        <Button
            android:id="@+id/btnsumar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DCF40E"
            android:text="+"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnrestar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#DCF40E"
            android:text="-"
            android:textAlignment="center"

            />

        <Button
            android:id="@+id/btnmultiplicar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#DCF40E"
            android:text="*"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btndividir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#DCF40E"
            android:text="/"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#DCF40E"
            android:text="C"
            android:textAlignment="center" />
    </LinearLayout>



</LinearLayout>